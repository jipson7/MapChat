<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:layout_margin="10dp"
        android:text="@string/drawer_go_to_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToLocation"/>

    <Button
        android:layout_margin="10dp"
        android:text="@string/drawer_delete_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deleteMessages"/>

    <Button
        android:layout_margin="10dp"
        android:text="@string/drawer_map_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="selectMapTheme"/>

    <Button
        android:layout_margin="10dp"
        android:text="@string/drawer_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="signOut"/>

    <Button
        android:layout_margin="10dp"
        android:text="@string/drawer_delete_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deleteAccount"/>
</LinearLayout>